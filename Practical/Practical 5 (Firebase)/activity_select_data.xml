<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectData">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nadim Shaikh KSBSCIT058"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/myname"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:hint="Enter Your Roll Number"
        android:id="@+id/select_roll_no"
        android:layout_below="@+id/myname"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_btn"
        android:layout_below="@+id/select_roll_no"
        android:layout_marginTop="20dp"
        android:text="GET"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/show_txt"
        android:layout_below="@+id/get_btn"
        android:hint="Display Data....."
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        android:textStyle="bold"/>
</RelativeLayout>
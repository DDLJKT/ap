<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertData">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shaikh Nadim KSBSCIT058"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/myname"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Enter Your Name"
        android:id="@+id/get_name"
        android:padding="20dp"
        android:inputType="text"
        android:layout_below="@+id/myname"/>
    <EditText
        android:id="@+id/get_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_name"
        android:layout_marginTop="10dp"
        android:hint="Enter Your Age"
        android:inputType="number"
        android:padding="20dp"/>
    <EditText
        android:id="@+id/get_roll_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_age"
        android:layout_marginTop="10dp"
        android:hint="Enter Your Roll Number"
        android:inputType="number"
        android:padding="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_roll_no"
        android:layout_marginTop="10dp"
        android:text="INSERT"
        android:id="@+id/send_btn"/>

</RelativeLayout>